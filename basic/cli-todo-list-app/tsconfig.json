{
    "compilerOptions": {
        "target": "ES2018",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "strictPropertyInitialization": false,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"],
            "@/*": ["src/*"]
        },
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}